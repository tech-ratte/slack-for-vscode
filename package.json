{
  "name": "slack-for-vscode",
  "displayName": "Slack for VSCode",
  "description": "Use Slack inside VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "slack",
          "title": "Slack",
          "icon": "$(feedback)"
        }
      ]
    },
    "views": {
      "slack": [
        {
          "id": "slackChannels",
          "name": "Channels",
          "icon": "$(feedback)",
          "contextualTitle": "Slack"
        }
      ]
    },
    "commands": [
      {
        "command": "slack-for-vscode.setToken",
        "title": "Slack: Set Token",
        "icon": "$(key)"
      },
      {
        "command": "slack-for-vscode.clearToken",
        "title": "Slack: Clear Token",
        "icon": "$(trash)"
      },
      {
        "command": "slack-for-vscode.refreshChannels",
        "title": "Slack: Refresh Channels",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "slack-for-vscode.setToken",
          "when": "view == slackChannels",
          "group": "navigation@1"
        },
        {
          "command": "slack-for-vscode.refreshChannels",
          "when": "view == slackChannels",
          "group": "navigation@2"
        },
        {
          "command": "slack-for-vscode.clearToken",
          "when": "view == slackChannels",
          "group": "overflow"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
